<%= form_for @student do |f| %>
  <%= f.label 'First name' %>
  <%= f.text_field :first_name %>
  <br/>
  <%= f.label 'Last name' %>
  <%= f.text_field :last_name %>
  <br/>
  <%= f.label 'Email' %>
  <%= f.text_field :email %>
  <br/>
  <%= f.fields_for :addresses do |fa| %>
    <%= fa.label 'Country' %>
    <%= fa.text_field :country %>
    <br/>
    <%= fa.label 'City' %>
    <%= fa.text_field :city %>
    <br/>
    <%= fa.label 'Street' %>
    <%= fa.text_field :street %>
    <br/>
    <%= fa.label 'No.' %>
    <%= fa.text_field :number %>
    <br/>
    <%= fa.label 'ZipCode' %>
    <%= fa.text_field :zipcode %>
  <% end %>
  <br/>
  <%= f.submit %>

<% end %>
