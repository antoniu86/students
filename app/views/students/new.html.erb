<% if @student.errors.any? %>
    <div id="error_explanation">

      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this mstudent from being saved:</h2>

      <ul>
        <% @student.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div style="max-width: 500px">
<%= form_for @student, html: {:class => "form-horizontal"} do |f| %>
	<fieldset>
		<legend>Adauga</legend>
	
	  <div class="form-group">
      <%= f.label :first_name, class: 'col-lg-3 control-label' %>
      
      <div class="col-lg-9">
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    </div>
	
	  <div class="form-group">
      <%= f.label :last_name, class: 'col-lg-3 control-label' %>
      
      <div class="col-lg-9">
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>
	
	  <div class="form-group">
      <%= f.label :email, class: 'col-lg-3 control-label' %>
      
      <div class="col-lg-9">
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-9 col-lg-offset-3">
        <%= f.submit "Adauga", class: 'btn btn-primary' %>
      </div>
    </div>
  </fieldset>
<% end %>
</div>
