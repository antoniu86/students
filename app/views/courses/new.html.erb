<%= form_for(@student_course, url: {action: 'create', method: :post}, html: {:class => "form-horizontal"}) do |f| %>
	<fieldset>
		<legend>Alege curs</legend>
		
	  <div class="form-group">
      <%= f.label :course, class: 'col-lg-3 control-label' %>
      
      <div class="col-lg-9">
        <%= select('student_course', 'course_id', @courses.collect{|course| [course.name, course.id]}, :class => 'form-control') %>
      </div>
    </div>
  	
		<div class="form-group">
      <div class="col-lg-9 col-lg-offset-3">
        <%= f.submit "Salveaza", class: 'btn btn-primary' %>
      </div>
    </div>
	</fieldset>
<% end %>

