<%= form_for @contact, html: {:class => 'form-horizontal', :style => 'margin-top:35px;'} do |f| %>
  <fieldset>
    <legend>Formular de contact</legend>
    
    <div class="form-group">
      <div class="col-lg-8">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Nume' %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-8">
        <%= f.text_field :phone, class: 'form-control', placeholder: 'Telefon' %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-12">
        <%= f.email_field :email, class: 'form-control', placeholder: 'E-mail' %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-12">
        <%= f.text_area :message, class: 'form-control', placeholder: 'Mesajul dumneavoastra' %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-12">
        <%= f.submit "Trimite ", class: 'btn btn-primary' %>
      </div>
    </div>
  </fieldset>
<% end %>
