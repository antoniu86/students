<h2>Logare</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>

  <fieldset>
    <legend></legend>
    
    <div class="form-group">
      <%= f.label :username, class: 'col-lg-2 control-label' %>
      
      <div class="col-lg-9">
        <%= f.text_field :username, class: 'form-control', autofocus: true %>
      </div>
    </div>
          
    <div class="form-group">
      <%= f.label :password, class: 'col-lg-2 control-label' %>
      
      <div class="col-lg-9">
        <%= f.password_field :password, class: 'form-control', autofocus: true %>
      
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %>  Remember me
            </label>
          </div>
        <% end -%>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-9 col-lg-offset-2">
        <%= f.submit "Login", class: 'btn btn-primary' %>
      </div>
    </div>
  </fieldset>
<% end %>

