<h2>Modifica datele de cont</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => "form-horizontal", method: :put}) do |f| %>
  <%= devise_error_messages! %>
  
  <fieldset>
    <legend></legend>
    
    <div class="form-group">
      <%= f.label :username, class: 'col-lg-2 control-label' %>
      
      <div class="col-lg-9">
        <%= f.text_field :username, :disabled => 'disabled', class: 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :first_name, class: 'col-lg-2 control-label' %>
      
      <div class="col-lg-9">
        <%= f.text_field :first_name, class: 'form-control', autofocus: true %>
      </div>
    </div>
      
    <div class="form-group">
      <%= f.label :last_name, class: 'col-lg-2 control-label' %>
      
      <div class="col-lg-9">
        <%= f.text_field :last_name, class: 'form-control', autocomplete: "off" %>
      </div>
    </div>
      
    <div class="form-group">
      <%= f.label :email, class: 'col-lg-2 control-label' %>
      
      <div class="col-lg-9">
        <%= f.email_field :email, class: 'form-control', autocomplete: "off" %>
      </div>
    </div>
    
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="form-group">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    
    <div class="form-group">
      <%= f.label :password, class: 'col-lg-2 control-label' %>
      
      <div class="col-lg-9">
        <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :password_confirmation, class: 'col-lg-2 control-label' %>
      
      <div class="col-lg-9">
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :current_password, class: 'col-lg-2 control-label' %>
      
      <div class="col-lg-9">
        <%= f.password_field :current_password, class: 'form-control', autocomplete: "off" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-9 col-lg-offset-2">
        <%= f.submit "Salveaza", class: 'btn btn-primary' %>
      </div>
    </div>
  </fieldset>
  
  <br />
  
  <fieldset>
    <legend>Sterge cont</legend>
    
    <div class="form-group">
      <div class="col-lg-9 col-lg-offset-2">
        <%= button_to "Nefericit?", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-primary' %>
      </div>
    </div>
  </fieldset>
<% end %>
